<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <LinearLayout
        android:id="@+id/ll_animation"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="140dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_kidProblem"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/kid_problem"
            android:layout_weight="1.2"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            />

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:layout_gravity="center"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/iv_kidThinking"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:src="@drawable/kid_thinking"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="15dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/iv_equal"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:src="@android:drawable/ic_media_ff"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/iv_kidSolution"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:src="@drawable/kid_solution"
            android:paddingTop="10dp"
            android:layout_weight="1.2"
            android:visibility="invisible"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_appTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="PROBLEM + THINKING = SOLUTION"
        android:textStyle="italic"
        android:textSize="22dp"
        android:textColor="#501410"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="invisible"
        android:layout_alignBottom="@id/ll_animation"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Created by:\nGajendra"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>